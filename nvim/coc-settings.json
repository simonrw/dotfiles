{
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "coc.preferences.formatOnSaveFiletypes": ["rust", "javascript", "javascriptreact", "html", "typescript", "go", "elm", "typescriptreact", "javascriptreact", "python", "cpp"],
    "codeLens.enable": true,
    "python.linting.mypyEnabled": false,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/.local/pipx/bin/black",
    "python.linting.flake8Path": "~/.local/pipx/bin/flake8",
    "pyright.organizeimports.provider": "pyright",
    "suggest.enablePreview": true,
    "suggest.noselect": true,
    "rust-analyzer.inlayHints.chainingHints": false,
    "rust-analyzer.checkOnSave.command": "clippy",
    "hover.target": "float",
    "diagnostic.virtualText": true,
    "diagnostic.messageTarget": "echo",
    "diagnostic.enableMessage": "never",
    "rust-analyzer.completion.addCallParenthesis": false,
    "rust-analyzer.cargo.runBuildScripts": true,
    "diagnostic.checkCurrentLine": true
}
