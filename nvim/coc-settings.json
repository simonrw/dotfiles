{
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "coc.preferences.formatOnSaveFiletypes": ["rust", "javascript", "javascriptreact", "html", "typescript", "go", "elm", "typescriptreact", "javascriptreact", "python", "cpp"],
    "python.linting.mypyEnabled": false,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/.local/pipx/bin/black",
    "python.linting.flake8Path": "~/.local/pipx/bin/flake8",
    "pyright.organizeimports.provider": "pyright",
    "suggest.noselect": false,
    "rust-analyzer.inlayHints.chainingHints": false,
    "hover.target": "float",
    "diagnostic.virtualText": true,
    "diagnostic.messageTarget": "echo",
    "suggest.autoTrigger": "none",
    "rust-analyzer.completion.addCallParenthesis": false,
    "rust-analyzer.cargo.runBuildScripts": true,
    "diagnostic.checkCurrentLine": true,
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        },
        "elmLS": {
            "command": "elm-language-server",
            "filetypes": ["elm"],
            "rootPatterns": ["elm.json"]
        },
        "zls": {
            "command": "zls",
            "filetypes": ["zig"]
        }
    }
}
