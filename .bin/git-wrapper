#!/usr/bin/env bash

set -euo pipefail

function wrapper() {
    if [[ "${1:-}" == "checkout" || "${1:-}" == "co" ]]; then
        echo "Consider using 'git switch' for branch operations or 'git restore' for file operations instead of 'git checkout'"
        echo "- 'git switch <branch>' to change branches"
        echo "- 'git restore <file>' to discard changes in working directory"
    else
        git "$@"
    fi
}

wrapper "$@"
