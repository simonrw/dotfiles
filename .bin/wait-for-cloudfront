#!/usr/bin/env bash

set -euo pipefail

if [[ $# -ne 1 ]]; then
    echo "Usage: $0 <distribution_id>" >&2
    exit 1
fi

if [[ $1 == "-h" ]] || [[ $1 == "--help" ]]; then
    echo "Usage: $0 <distribution_id>" >&2
    exit 1
fi


distribution_id=$1


while true; do
    status="$(aws cloudfront get-distribution --id E2JGBJMOOLSBIS | jq -r .Distribution.Status)"
    if [[ $status != "InProgress" ]]; then
        noti
        break
    fi
    sleep 10
done
