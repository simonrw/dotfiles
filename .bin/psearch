#!/usr/bin/env ruby
# encoding: utf-8
#
# Given a list of terms to search for, run process search for these and
#Â boolean OR each given term

out = Array.new
ARGV.each do |term|
    out << "-e #{term}"
end
search_str = out.join(' ')

if ARGV.empty?
    puts 'No search terms provided'
else
    system "ps aux | grep -E #{search_str} | grep -v grep | grep -v #{Process.pid}"
end
