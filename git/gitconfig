[user]
    name = Simon Walker
    email = s.r.walker101@googlemail.com
    signingkey = B62EE752
[alias]
    # Long form aliases
    # See https://github.com/GitAlias/gitalias/blob/master/gitalias.txt
    get = !git pull --rebase && git submodule update --init --recursive
    publish = "!git push -u origin $(git branch-name)"
    unpublish = "!git push origin :$(git branch-name)"
    branch-name = "!git rev-parse --abbrev-ref HEAD"
    graphviz = !"f() { echo 'digraph git {' ; git log --pretty='format:  %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"

    graph = log --graph --all --decorate --stat --date iso
    # Scripting aliases
    # -- always run command at the root of the git repo
    exec = ! exec

    # Taken from https://blog.scottnonnenberg.com/better-git-configuration/
    prune = fetch --prune

    # Taken from http://www.theodo.fr/blog/2017/06/git-game-advanced-git-aliases/
    # Ignore whatever is passed
    ignore = "!f() { echo \"$1\" >> .gitignore; }; f"
    unpushed = log @{u}..

    # Other aliases
    ff = !"f() { git merge --ff-only origin/$(git branch-name); }; f"
    st = status
    co = checkout
    su = submodule update --init --recursive
    pr = pull --rebase --prune
    pullff = pull --ff-only
    pushff = push --ff-only
    mergeff = merge --ff-only
    sync = !git pr && git push
    wdiff = diff --color-words
    ci = commit
    c = commit -m
    q = quick
    edit = "!vim `git ls-files -m`"
    # Quickly diff the upstream remote (assume origin)
    diffup = diff origin
    upsub = submodule foreach 'git checkout master && git pull'

    # Taken from http://gggritso.com/human-git-aliases
    branches = branch -a
    tags = tag
    stashes = stash list
    unstage = reset -q HEAD --
    discard = checkout --
    amend = commit --amend
    precommit = diff --cached --diff-algorithm=minimal -w
    pre = !git precommit


    # Quickly interactive rebase with upstream
    rebup = rebase -i origin/master --prune

    #Â Logging from Gary Bernhardt
    head = !git l -1
    h = !git head
    r = !git l -20
    ra = !git r --all
    l = log --graph --decorate --oneline
    la = log --graph --decorate --oneline --all
    dc = !git precommit
    aa = add --all
    aap = add --all --patch
    oneline = log --oneline --decorate
    today = diff @{yesterday}..
    last = log -1
    unstage = reset HEAD
[color]
    ui = auto
[core]
    abbrev = 12
    autocrlf = input
    safecrlf = true
    whitespace = fix
    editor = vim
    mergeoptions = --no-ff
    preloadindex = true
    excludesfile = ~/.gitignore_global
[merge]
    tool = vimdiff
    conflictstyle = "diff3"
[transfer]
    fsckobjects = true
[push]
    default = simple
    followTags = true
[diff]
    algorithm = patience
    tool = icdiff
[difftool]
    prompt = false
[difftool "icdiff"]
    cmd = icdiff --line-numbers $LOCAL $REMOTE
[difftool "opendiff"]
    path = opendiff
[mergetool "diffconflicts"]
    cmd = "diffconflicts vim $BASE $LOCAL $REMOTE $MERGED"
    trustExitCode = true
    keepBackup = false
[mergetool "splice"]
    cmd = "vim $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true
[mergetool "ediff"]
    cmd = emacs --eval \"(ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\"    \\\"$BASE\\\" nil \\\"$MERGED\\\")\"
[fetch]
    # Always prune when fetching and pulling
    prune = 1
[branch]
    autosetuprebase = always
[grep]
    extendedRegexp = true
[status]
    short = 1
    branch = 1
    submoduleSummary = true
[init]
    templatedir = ~/.gittemplate
[pull]
    rebase = preserve
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
[credential]
	helper = cache
