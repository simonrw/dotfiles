let mapleader = "\<space>"

" plugins
set surround
set commentary

" settings
set incsearch
set smartcase
set nohlsearch
set ignorecase
set scrolloff=5
set norelativenumber
set nonumber

" configure mappings
map <leader>f <Action>(GotoFile)
map <leader>s <Action>(GotoSymbol)
map gb <Action>(RecentFiles)
map [c <Action>(VcsShowPrevChangeMarker)
map <leader>y <Action>(ReformatCode)
map ]c <Action>(VcsShowNextChangeMarker)
map <space> :nohl<Cr>
